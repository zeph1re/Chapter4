<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Pertemuan1.MiniChallenge.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_nama"
        android:hint="Masukkan nama"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toast_btn"
        android:layout_below="@id/et_nama"
        android:layout_centerHorizontal="true"
        android:text="TAMPILKAN NAMA (TOAST)"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snackbar_btn"
        android:text="TAMPILKAN NAMA (SNACKBAR)"
        android:layout_below="@id/toast_btn"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>